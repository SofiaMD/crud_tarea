<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <title>CRUD</title>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <a class="navbar-brand" style="color: #294961; font-size: 2rem; margin-left: 1rem;" href="#">CRUD'S</a>
      </div>
    </nav>
      
     
    <div class="card border-info" style="max-width: 50rem; margin-left: 5rem; margin-top: 1rem;">
      <div class="card-header">Nuevo Alumno</div>
        <!-- <h1 style="margin-left: 6rem;">Nuevo Alumno</h1> -->
        <div class="card-body" style="margin-left: 5rem;">
      <form  action="/save" method="POST" >
        <div class="col-md-6" >
            <label for="nombresAlumno" class="form-label">Nombres Alumno</label>
            <input type="text" class="form-control" id="nombresAlumno" name="nombresAlumno" tabindex="1">
        </div>
        <div class="col-md-6">
            <label for="apellidosAlumno" class="form-label">Apellidos Alumno</label>
            <input type="text" class="form-control" id="apellidosAlumno" name="apellidosAlumno" tabindex="2">
        </div>
        <div class="col-md-6">
            <label for="telefonoAlumno" class="form-label">Telefono Alumno</label>
            <input type="text" class="form-control" id="telefonoAlumno" name="telefonoAlumno" tabindex="3">
        </div>
        <div class="col-md-6">
            <label for="direccionAlumno" class="form-label">Direccion Alumno</label>
            <input type="text" class="form-control" id="direccionAlumno" name="direccionAlumno" tabindex="4">
        </div>
        <div class="col-md-6">
          <label for="idcarrera" class="form-label">Carrera Alumno</label>
          <select id="idcarrera" name="idcarrera" tabindex="5" class="form-select">
            <option selected>Seleccione el nombre de la Carrera</option>
            <option value="idarrera"></option>
            
          </select>
        </div>
        <!-- <div class="col-md-6">
          <label for="idcarrera" class="form-label">Carrera</label>
          <input type="text" class="form-control" id="idcarrera" name="idcarrera" tabindex="4">
      </div> -->
      <br>
        <div class="col-12">
          <button type="submit"  tabindex="6" class="btn btn-outline-success">Guardar</button>
          <a href="/" class="btn btn-outline-danger">Cancelar</a>
        </div>
      </form>
    </div>
     </div>
    </div>
    
    <h1><i class='bx bxs-ghost'></i></h1>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    
  </body>
</html>