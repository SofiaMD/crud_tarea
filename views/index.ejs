<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <title>CRUD</title>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <a class="navbar-brand" style="color: #294961; font-size: 2rem; margin-left: 1rem;" href="#">CRUD'S</a>
      </div>
    </nav>
    
      <div class="container">
          <a href="/create" class="btn btn-outline-info" style="margin-top: 1rem;"><i class='bx bx-plus-circle'> Ingresar Alumno</i></a>
          <a href="/indexCarrera" class="btn btn-outline-info" style="margin-top: 1rem;"><i class='bx bx-plus-circle'> Carreras</i></a>
            <table class="table table-bordered table-striped text-center mt-4">
                <tr class="bg-info text-white">
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Carrera</th>
                    <th scope="col">Acción</th>
                </tr>
                <thead>

                </thead>
                <tbody>
                    <% results.forEach((alumno) => { %>
                   <tr>
                       <td><%= alumno.idalumno %></td>
                       <td><%= alumno.nombresAlumno %></td>
                       <td><%= alumno.apellidosAlumno %></td>
                       <td><%= alumno.telefonoAlumno %></td>
                       <td><%= alumno.direccionAlumno %></td>
                       <td><%= alumno.idcarrera %></td>
                       <td>
                           <a href="./edit/<%= alumno.idalumno %>" class="btn btn-info">Editar</a>
                           <a href="./delete/<%= alumno.idalumno %>" class="btn btn-danger">Eliminar</a>
                       </td>
                   </tr> 
                   <% }) %>
                </tbody>
            </table>
      </div>
      <h1><i class='bx bxs-ghost'></i></h1>
    

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    
  </body>
</html>